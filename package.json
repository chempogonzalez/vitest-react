{
  "name": "vitest-react",
  "version": "0.9.0",
  "description": "ðŸ§ª Test utils setup for react/nextjs projects using Vitest",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "require": "./dist/index.js",
      "import": "./dist/index.mjs",
      "types": "./dist/index.d.ts"
    }
  },
  "scripts": {
    "build": "tsup",
    "test": "echo \"Error: no test specified\" && exit 1",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "lint-fix": "npm run lint -- --fix",
    "copy-files": "cp ./src/test-utils/setup.ts ./setup.ts",
    "prepack": "npm run copy-files && npm run build",
    "prepublish": "npm run copy-files && npm run build",
    "postinstall": "node ./scripts/add-vitest-config.js"
  },
  "files": [
    "dist",
    "config",
    "scripts",
    "setup.ts"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/chempogonzalez/vitest-react.git"
  },
  "keywords": [],
  "author": "Chempo gonzalez <chempo.glez@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/chempogonzalez/vitest-react/issues"
  },
  "homepage": "https://github.com/chempogonzalez/vitest-react#readme",
  "dependencies": {
    "@testing-library/jest-dom": "5.16.4",
    "@testing-library/react": "13.2.0",
    "@testing-library/user-event": "14.1.1",
    "@vitejs/plugin-react": "1.3.2",
    "fast-glob": "3.2.11",
    "fs-extra": "10.1.0",
    "jsdom": "19.0.0",
    "vitest": "0.10.2"
  },
  "devDependencies": {
    "@chempo/ec-linter": "1.0.10",
    "@types/node": "17.0.31",
    "tsup": "5.12.6"
  }
}
